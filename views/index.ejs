<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="main.css">
    <title>Document</title>
</head>
<body class="background" id="wrapper">
    <div class="container">
        <div class="col-12 mb-3 d-flex justify-content-center">
            <h1>What to cook?</h1>
        </div>
        <div class="col-12">
            <div class="bg-dark rounded p-2">
                <form class="d-flex m-0 " action="/recipe" method="post">
                    <input required class="form-control me-2 transparent text-light border-light border-2" type="text" placeholder="<% if(locals.userInput){%> 
                        <%=userInput %> 
                    <% } else {%>
                        Search for a recipe...
                    <% } %>" name="input">
                    <!-- <button class="btn btn-outline-success" type="submit">Search</button> -->
                    <input type="submit" value="Search" class="btn btn-outline-success">
                </form>
                <% if (locals.randomRec) {%>
                    <div class="card mt-3 transparent border-light border-2 text-light">
                        <div class="row g-0">
                            <div class="col-md-4 p-2 d-flex flex-column justify-content-center">
                                <img src="<%=randomRec.recipe.image  %>" class="img-fluid rounded" alt="image of<%= randomRec.recipe.label %>" style="width: 100%; max-height: 540px;" >
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title"><%= randomRec.recipe.label %></h5>
                                    <p class="card-text"><%= randomRec.recipe.cuisineType %></p>
                                    <p>Ingredients:</p>
                                    <ul>
                                        <% for(let i = 0; i < randomRec.recipe.ingredientLines.length; i++){ %>
                                            <li class="card-text"><%= randomRec.recipe.ingredientLines[i] %></li>
                                        <% } %>
                                    </ul>
                                </div>
                            </div> 
                            <!-- <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p> -->
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>


</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</html>